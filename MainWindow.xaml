<Window x:Class="WpfApp1пр2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1пр2"
        mc:Ignorable="d"
        Title="MainWindow" Height="552" Width="986" Loaded="Window_Loaded">
    <Grid>

        <Label Content="Просмотр погоды" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20" Height="39"/>
        <ScrollViewer Grid.ColumnSpan="2" Margin="10,70,10,70" VerticalScrollBarVisibility="Auto" >
            <WrapPanel x:Name="wrapPanelWeather" Height="Auto" Width="Auto"/>
        </ScrollViewer>
        <Label x:Name="labelLoad" Content="Загрузка" HorizontalAlignment="Center" Margin="0,241,0,0" VerticalAlignment="Top" FontSize="20" Height="39"/>
        <Button x:Name="buttonMinus" Content="Прошлые 25" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="100" Height="45" Click="buttonMinus_Click"/>
        <Button x:Name="buttonPlus" Content="Следующие 25" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="100" Height="45" Click="buttonPlus_Click"/>


    </Grid>
</Window>
